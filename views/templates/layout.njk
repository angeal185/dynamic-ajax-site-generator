    page: 1,
    maxVisible: 5,
	href: "#page-${number}",
    leaps: true,
    firstLastUse: true,
    first: '←',
    last: '→',
    wrapClass: 'pagination',
    activeClass: 'active',
    disabledClass: 'disabled',
    nextClass: 'next',
    prevClass: 'prev',
    lastClass: 'last',
    firstClass: 'first'
}).on("page", function(event, num){
    $("#content").load("includes/Page-" + num + ".html", function() {
			$.get( "app/js/codepen.min.js" ),
